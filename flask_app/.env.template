# Flask Web App Environment Configuration
# Copy this file to .env and customize for your environment

# Flask Core Settings
SECRET_KEY=your-secret-key-here-change-for-production
FLASK_ENV=development
FLASK_DEBUG=True
FLASK_PORT=5000

# Database Configuration
# Leave empty to use existing journal.db in parent directory
DATABASE_URL=
DATABASE_PATH=

# Trading System Settings
CACHE_ENABLED=True
DATA_UPDATE_TIMEOUT=300
REGIME_UPDATE_INTERVAL=3600
BACKTEST_TIMEOUT=1800
BACKTEST_MAX_CONCURRENT=1

# UI/UX Settings
ITEMS_PER_PAGE=25
CHART_THEME=plotly_dark
BOOTSTRAP_THEME=dark

# Security Settings (Production)
WTF_CSRF_ENABLED=True
WTF_CSRF_TIME_LIMIT=3600
SESSION_LIFETIME=86400
SESSION_COOKIE_SECURE=False

# Logging
LOG_LEVEL=INFO
LOG_FILE=flask_app.log

# Database Options (Advanced)
SQLALCHEMY_ECHO=False